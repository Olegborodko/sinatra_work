%ul
  - @users.each do |user|
    %li
      #{user.login} | #{user.age} | #{user.description}
      %a{ :href => "users/#{user.id}" } posts of user #{user.login}
      %br
      %form{ :action =>"/users/#{user.id}", :method => "post" }
        %input{ :type => "hidden", :name => "_method", :value => "DELETE" }
        %input{ :type => "submit", :value => "Click for delete" }

